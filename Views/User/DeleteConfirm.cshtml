@model UserModel
@{
    ViewData["Title"] = "Delete Confirm";
}

<div class="text-center">
    <h3>Do you really want to delete the user (@Model.Name)?</h3>
</div>

<a class="btn btn-light" role="button" asp-controller="User" asp-action="Index">Cancel</a>
<a class="btn btn-light" role="button" asp-controller="User" asp-route-id="@Model.Id" asp-action="Delete">Confirm</a>
