@using ControllerProject.Enums
@model UserModel

@{
    ViewData["Title"] = "Register User";

}

<div class="text-center">
    <h1 class="display-4">Register User</h1>
</div>

<form asp-controller="User" asp-action="Add" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter user name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter user email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter user login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="profile" class="form-label">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Select</option>
            <option value="@Convert.ToInt32(ProfileEnum.Admin)">Administrator</option>
            <option value="@Convert.ToInt32(ProfileEnum.Basic)">Basic</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter user password">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <button type="submit" class="btn btn-light">Add</button>
    <a class="btn btn-light" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>
