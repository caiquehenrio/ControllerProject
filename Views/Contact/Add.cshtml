@model ContactModel

@{
    ViewData["Title"] = "Register Contact";

}

<div class="text-center">
    <h1 class="display-4">Register Contact</h1>
</div>

<form asp-controller="Contact" asp-action="Add" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter contact name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter contact email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="cellphone">Cellphone</label>
        <input type="text" asp-for="Cellphone" class="form-control" placeholder="Enter contact cellphone">
        @Html.ValidationMessageFor(x => x.Cellphone)
    </div>

    <button type="submit" class="btn btn-light">Add</button>
    <a class="btn btn-light" asp-controller="Contact" asp-action="Index" role="button">Back</a>
</form>
